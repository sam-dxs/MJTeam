<!--pages/detail1/detail1.wxml-->
<view class="container person-top">
    <view class="person">
      <image src="/images/sam.jpg"></image>
    </view>
    <view class="personal-name">
      <text>Sam</text>
    </view>
    <view class="personal-post">
      <text>技术总监</text>
    </view>
</view>
<view class="person-under">
  <view class="intro">
    <text class="intro-label">个人描述：</text>
    <text>老大、技术、沉稳</text>
  </view>
  <view class="personal-infor" wx:for="{{array}}">
      <view class="label">
        <text>{{item.label}}</text>
      </view>
      <view class="infor-detail">
        <text>{{item.detail}}</text>
      </view>
  </view>
</view>
